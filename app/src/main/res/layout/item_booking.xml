<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/card_vie"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_itembooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/im_parking"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_parking"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nameMall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:text="VINCOM Dong Khoi, District 1"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_timeBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nameMall"
                android:textStyle="italic"
                android:text="VINCOM Dong Khoi, District 1"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_timeBooking"
                android:text="VINCOM Dong Khoi, District 1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>